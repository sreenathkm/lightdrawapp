<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context="com.sreenath.apps.lightdraw.HomeActivity"
    android:orientation="vertical">

    <com.sreenath.apps.lightdraw.views.SuggestionsView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#ddeeff"

        android:id="@+id/suggestionsView" />

    <com.sreenath.apps.lightdraw.views.DrawableView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="34"

        android:id="@+id/drawableView" />

    <com.sreenath.apps.lightdraw.views.ToolBoxView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ddeeff"
        android:layout_weight="2.5"

        android:id="@+id/toolBoxView" />
</LinearLayout>
